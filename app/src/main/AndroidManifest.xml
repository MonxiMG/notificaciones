<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ua.eps.notificaciones">

    <!-- Permiso requerido desde Android 13 (API 33) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Pantalla principal (menú de ejercicios) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ejercicio 1: Toast -->
        <activity android:name=".Ej1ToastActivity" />

        <!-- Ejercicio 2: Snackbar -->
        <activity android:name=".Ej2SnackbarActivity" />

        <!-- Ejercicio 3: Diálogos -->
        <activity android:name=".Ej3DialogosActivity" />

        <!-- Ejercicio 4: Notificación en barra -->
        <activity android:name=".Ej4NotifActivity" />

    </application>

</manifest>
